<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_message_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#DD333333"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/new_message_notification_desc"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:text="XX New messages\n(YY exchanges)"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:lineSpacingMultiplier="1.2"
        />

    <Button
        android:id="@+id/new_message_notification_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#ffecb3"
        android:text="@string/new_messages_notification_btn"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"/>

</LinearLayout>